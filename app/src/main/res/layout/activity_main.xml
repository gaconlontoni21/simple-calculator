                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
